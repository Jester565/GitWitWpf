<UserControl x:Class="GitWitWpf.Controls.CommitDayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitWitWpf.Controls"
             mc:Ignorable="d" 
             Width="auto" Height="auto">
	<Control.Resources>
		<local:CommitsToColorConverter x:Key="commitconverter"></local:CommitsToColorConverter>
	</Control.Resources>
	<Grid>
		<Rectangle Width="30" Height="30" Stroke="LightGray" StrokeThickness="1" Fill="{Binding Path=Commits.Count, Converter={StaticResource commitconverter}}"  />
	</Grid>
</UserControl>
