<Window x:Class="GitWitWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitWitWpf"
				xmlns:controls="clr-namespace:GitWitWpf.Controls"
				mc:Ignorable="d"
        Title="MainWindow" 
				Height="{Binding CustomHeight, Mode=OneWay}" 
				Width="{Binding CustomWidth, Mode=OneWay}" 
				Left="0" Top="0"
				AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded">
	<Window.Background>
		<SolidColorBrush Opacity="0.5" Color="Black"/>
	</Window.Background>
	<Window.Resources>
		<Image x:Key="SettingsImg" Source="Resources/settings.png"/>
	</Window.Resources>
	<Grid>
		<Button HorizontalAlignment="Left" VerticalAlignment="Top" Content="{StaticResource SettingsImg}" Background="#33000000" Width="20" Height="20" BorderThickness="0" Click="Settings_Click" />
		<controls:CommitCalendarControl DataContext="{Binding CommitCalendar}"></controls:CommitCalendarControl>
	</Grid>
</Window>
